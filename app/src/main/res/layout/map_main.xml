<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <com.google.android.maps.MapView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:enabled="true"
        android:apiKey="0mJZdauLPyW0cKpW_BPtOunaiteEqZlRzy7EG6g" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:id="@+id/hometownButton"
            android:layout_width="100px"
            android:layout_height="70px"
            android:layout_marginLeft="1px"
            android:layout_weight="1.0"
            android:textSize="11sp"
            android:textStyle="bold"
            android:text="@string/hometown_label"
            android:drawableLeft="@drawable/home_button"
            android:background="@drawable/button"
            android:layout_alignParentLeft="true" />

        <Button
            android:id="@+id/locButton"
            android:layout_width="80px"
            android:layout_height="70px"
            android:layout_weight="1.0"
            android:textSize="11sp"
            android:textStyle="bold"
            android:text="@string/loc_label"
            android:drawableLeft="@drawable/cloc_button"
            android:background="@drawable/button"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/chckButton"
            android:layout_toRightOf="@+id/hometownButton" />

        <Button
            android:id="@+id/chckButton"
            android:layout_width="100px"
            android:layout_height="70px"
            android:layout_marginRight="1px"
            android:layout_weight="1.0"
            android:textSize="11sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/checkin_button"
            android:text="@string/chck_label"
            android:background="@drawable/button"
            android:layout_alignParentRight="true" />


        <Button
            android:background="@drawable/loading"
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:textStyle="bold"
            android:text="@string/state_label"
            android:id="@+id/stateButton"
            android:clickable="false"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:textColor="#ffffff"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="130dp"
            android:layout_centerHorizontal="true"></Button>

    </RelativeLayout>

</FrameLayout>
